<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:contentDescription="todo"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        />
    <TextView
        android:id="@+id/json_title"
        android:gravity=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON TITLE"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image" />
    <TextView
        android:id="@+id/json_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON DATE"
        android:layout_alignWithParentIfMissing="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_below="@+id/json_title"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json_description"
        android:text="JSON DESCRIPTION"
        android:maxLength="500"
        android:ellipsize="marquee"
        android:layout_below="@+id/json_date"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image" />


</RelativeLayout>